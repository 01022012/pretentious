#!/usr/bin/env ruby

require 'ddt'
require 'optparse'
require 'ripper'
require "readline"
require 'json'

# ddt example.rb -o rspec

filename = ARGV[0]

command_line = ""
example_body = ""

index = 0
File.open(filename, "r") do |f|
  f.each_line do |line|
    if (index == 0)
     command_line = line
    else
     example_body << "#{line}\n"
    end
  end
end

puts "command_line #{command_line}"
puts "body #{example_body}"

